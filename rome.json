{
  "files": {
    "ignore": [
      "**/.next", "**/node_modules", "cache", "coverage", "dist",
      "generated.ts", "pnpm-lock.yaml", "pnpm-workspace.yaml", "tsconfig.json",
      "tsconfig.*.json", "turbo.json"
    ]
  },
  "$schema": "./node_modules/rome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "asNeeded"
    }
  }
}
