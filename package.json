{
  "name": "assemble-package",
  "version": "1.0.0",
  "description": "NPM package boilerplate",
  "main": "index.js",
  "author": "Public Assembly",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
